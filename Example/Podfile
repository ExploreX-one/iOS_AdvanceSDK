source 'https://github.com/CocoaPods/Specs.git'
use_frameworks!
platform :ios, '10.0'
target 'AdvanceSDK_Example' do

  #必须集成
  pod 'AdvanceSDK', :path => '../'
  
  #集成倍业Adapter
  pod 'AdvanceSDK/MercuryAdapter', :path => '../'
  #pod 'MercurySDK', '3.2.0'

  #集成穿山甲Adapter
  pod 'AdvanceSDK/CSJAdapter', :path => '../'
  #pod 'Ads-CN', '4.9.0.6'
  
  #集成广点通Adapter
  pod 'AdvanceSDK/GDTAdapter', :path => '../'
  #pod 'GDTMobSDK', '4.14.10'

  #集成快手Adapter
  pod 'AdvanceSDK/KSAdapter', :path => '../'
  #pod 'KSAdSDK', '3.3.40'

  # 集成百度Adapter
  pod 'AdvanceSDK/BDAdapter', :path => '../'
  #pod 'BaiduMobAdSDK', '5.101'

  # 集成GroMoreBidding模块
  pod 'AdvanceSDK/GroMoreBidding', :path => '../'
  

  # Third
  pod 'SDWebImage', '5.12.1'
  pod 'Masonry'

  target 'AdvanceSDK_Tests' do
    inherit! :search_paths
    
  end
  
  post_install do |installer|
    installer.generated_projects.each do |project|
      project.targets.each do |target|
        target.build_configurations.each do |config|
          config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = "arm64"
        end
      end
    end
  end

end
