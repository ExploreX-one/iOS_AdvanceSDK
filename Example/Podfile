source 'https://github.com/CocoaPods/Specs.git'
use_frameworks!
platform :ios, '10.0'
target 'AdvanceSDK_Example' do

  #必须集成
  pod 'AdvanceSDK', :path => '../'
  
  #集成倍业Adapter
  pod 'AdvanceSDK/MercuryAdapter', :path => '../'
  pod 'MercurySDK', '3.3.8'

  #集成穿山甲Adapter（基于单独SDK）
  pod 'AdvanceSDK/CSJAdapter', :path => '../'
  pod 'Ads-CN', '5.7.1.1'
  
  #集成穿山甲Adapter（基于融合SDK）
#  pod 'AdvanceSDK/CSJAdapter-Fusion', :path => '../'
#  pod 'Ads-Fusion-CN-Beta','5.7.0.8', :subspecs => ['BUAdSDK', 'CSJMediation']

  #集成广点通Adapter
  pod 'AdvanceSDK/GDTAdapter', :path => '../'
  pod 'GDTMobSDK', '4.14.50'

  #集成快手Adapter
  pod 'AdvanceSDK/KSAdapter', :path => '../'
  pod 'KSAdSDK', '3.3.55'

  #集成百度Adapter
  pod 'AdvanceSDK/BDAdapter', :path => '../'
  pod 'BaiduMobAdSDK', '5.325'
  
  #集成TanxAdapter
  pod 'AdvanceSDK/TanxAdapter', :path => '../'
  pod 'AdvTanxSDK', '3.3.1'

  #集成GroMoreBidding模块
#  pod 'AdvanceSDK/GroMoreBidding', :path => '../'
  

  #Third
  pod 'SDWebImage'
  pod 'Masonry'
  
  post_install do |installer|
    installer.generated_projects.each do |project|
      project.targets.each do |target|
        target.build_configurations.each do |config|
          config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = "arm64"
        end
      end
    end
  end

end
